<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.7.5</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>

	<groupId>pl.terra</groupId>
	<artifactId>generator</artifactId>
	<version>0.0.1</version>
	<packaging>pom</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>11</maven.compiler.source>
		<maven.compiler.target>11</maven.compiler.target>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-dependencies</artifactId>
				<version>2.6.7</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.springdoc</groupId>
			<artifactId>springdoc-openapi-ui</artifactId>
			<version>1.6.8</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.datatype</groupId>
			<artifactId>jackson-datatype-jsr310</artifactId>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>javax.validation</groupId>
			<artifactId>validation-api</artifactId>
			<version>1.1.0.Final</version>
			<optional>true</optional>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.openapitools</groupId>
				<artifactId>openapi-generator-maven-plugin</artifactId>
				<version>5.4.0</version>
				<executions>
					<execution>
						<id>api</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>generator/api.yaml</inputSpec>
							<generatorName>spring</generatorName>
							<apiPackage>${project.groupId}.http.api</apiPackage>
							<modelPackage>${project.groupId}.http.model</modelPackage>
							<invokerPackage>${project.groupId}.http.handler</invokerPackage>
							<generateApiDocumentation>false</generateApiDocumentation>
							<generateModelTests>false</generateModelTests>
							<generateModelDocumentation>false</generateModelDocumentation>
							<generateSupportingFiles>true</generateSupportingFiles>
							<addCompileSourceRoot>flase</addCompileSourceRoot>
							<configOptions>
								<useTags>true</useTags>
								<beanQualifiers>true</beanQualifiers>
								<documentationProvider>springdoc</documentationProvider>
								<interfaceOnly>true</interfaceOnly>
								<groupId>${project.groupId}</groupId>
								<artifactId>${project.artifactId}</artifactId>
								<dateLibrary>java8</dateLibrary>
								<openApiNullable>false</openApiNullable>
								<sortParamsByRequiredFlag>true</sortParamsByRequiredFlag>
								<sortModelPropertiesByRequiredFlag>true</sortModelPropertiesByRequiredFlag>
								<ensureUniqueParams>true</ensureUniqueParams>
								<allowUnicodeIdentifiers>false</allowUnicodeIdentifiers>
								<prependFormOrBodyParameters>false</prependFormOrBodyParameters>
								<legacyDiscriminatorBehavior>true</legacyDiscriminatorBehavior>
								<disallowAdditionalPropertiesIfNotPresent>true</disallowAdditionalPropertiesIfNotPresent>
								<sourceFolder>src/main/java</sourceFolder>
								<serializableModel>false</serializableModel>
								<bigDecimalAsString>false</bigDecimalAsString>
								<fullJavaUtil>false</fullJavaUtil>
								<discriminatorCaseSensitive>true</discriminatorCaseSensitive>
								<hideGenerationTimestamp>false</hideGenerationTimestamp>
								<withXml>false</withXml>
								<disableHtmlEscaping>false</disableHtmlEscaping>
								<booleanGetterPrefix>get</booleanGetterPrefix>
								<ignoreAnyOfInEnum>false</ignoreAnyOfInEnum>
								<snapshotVersion>false</snapshotVersion>
								<useRxJava3>true</useRxJava3>
								<parcelableModel>false</parcelableModel>
								<usePlayWS>false</usePlayWS>
								<playVersion>play26</playVersion>
								<useGzipFeature>false</useGzipFeature>
								<useRuntimeException>false</useRuntimeException>
								<asyncNative>false</asyncNative>
								<useReflectionEqualsHashCode>false</useReflectionEqualsHashCode>
								<caseInsensitiveResponseHeaders>false</caseInsensitiveResponseHeaders>
								<useAbstractionForFiles>false</useAbstractionForFiles>
								<dynamicOperations>false</dynamicOperations>
								<serializationLibrary>jackson</serializationLibrary>
								<unhandledException>true</unhandledException>
							</configOptions>
						</configuration>
					</execution>

					<execution>
						<id>device</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>generator/device.yaml</inputSpec>
							<generatorName>spring</generatorName>
							<apiPackage>${project.groupId}.device.api</apiPackage>
							<modelPackage>${project.groupId}.device.model</modelPackage>
							<invokerPackage>${project.groupId}.device.handler</invokerPackage>
							<generateApiDocumentation>false</generateApiDocumentation>
							<generateModelTests>false</generateModelTests>
							<generateModelDocumentation>false</generateModelDocumentation>
							<generateSupportingFiles>true</generateSupportingFiles>
							<addCompileSourceRoot>flase</addCompileSourceRoot>
							<generateApis>false</generateApis>
							<configOptions>
								<useTags>true</useTags>
								<beanQualifiers>true</beanQualifiers>
								<documentationProvider>springdoc</documentationProvider>
								<interfaceOnly>true</interfaceOnly>
								<groupId>${project.groupId}</groupId>
								<artifactId>${project.artifactId}</artifactId>
								<dateLibrary>java8</dateLibrary>
								<openApiNullable>false</openApiNullable>
								<sortParamsByRequiredFlag>true</sortParamsByRequiredFlag>
								<sortModelPropertiesByRequiredFlag>true</sortModelPropertiesByRequiredFlag>
								<ensureUniqueParams>true</ensureUniqueParams>
								<allowUnicodeIdentifiers>false</allowUnicodeIdentifiers>
								<prependFormOrBodyParameters>false</prependFormOrBodyParameters>
								<legacyDiscriminatorBehavior>true</legacyDiscriminatorBehavior>
								<disallowAdditionalPropertiesIfNotPresent>true</disallowAdditionalPropertiesIfNotPresent>
								<sourceFolder>src/main/java</sourceFolder>
								<serializableModel>false</serializableModel>
								<bigDecimalAsString>false</bigDecimalAsString>
								<fullJavaUtil>false</fullJavaUtil>
								<discriminatorCaseSensitive>true</discriminatorCaseSensitive>
								<hideGenerationTimestamp>false</hideGenerationTimestamp>
								<withXml>false</withXml>
								<disableHtmlEscaping>false</disableHtmlEscaping>
								<booleanGetterPrefix>get</booleanGetterPrefix>
								<ignoreAnyOfInEnum>false</ignoreAnyOfInEnum>
								<snapshotVersion>false</snapshotVersion>
								<useRxJava3>true</useRxJava3>
								<parcelableModel>false</parcelableModel>
								<usePlayWS>false</usePlayWS>
								<playVersion>play26</playVersion>
								<useGzipFeature>false</useGzipFeature>
								<useRuntimeException>false</useRuntimeException>
								<asyncNative>false</asyncNative>
								<useReflectionEqualsHashCode>false</useReflectionEqualsHashCode>
								<caseInsensitiveResponseHeaders>false</caseInsensitiveResponseHeaders>
								<useAbstractionForFiles>false</useAbstractionForFiles>
								<dynamicOperations>false</dynamicOperations>
								<serializationLibrary>jackson</serializationLibrary>
								<unhandledException>true</unhandledException>
							</configOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
